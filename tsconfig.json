{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./typings",
    "jsx": "react",
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./lib",
    "target": "es5"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
